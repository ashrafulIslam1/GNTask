@model GNTask.ViewModels.targetProductViewModel

@{
    ViewData["Title"] = "Index";
}
<form class="needs-validation" novalidate>
  <div class="form-row">

    @*##########   Select Target(user) part Start    ##########*@
    <div class="shadow p-3 mb-2 mt-2">
        <h6>Select Target</h6>
        <hr/>
        
        <div class="col-md-4 d-flex">
            <div>
                <label class="me-5 pe-5" for="validationFormDate">Form Date</label>
            </div>
            <div>
                <input type="date" class="form-control btn-sm" id="formDate"/>
            </div>
            <span validation-for="FromDate" class="text-danger"></span>
        </div>

        <div class="col-md-4 d-flex my-2">
            <div>
                <label class="me-5 pe-5" for="validationToDate">To Date</label>
            </div>
            <div>
                <input type="date" class="form-control btn-sm" id="toDate"/>
            </div>
            <span validation-for="ToDate" class="text-danger"></span>
        </div>

        <div class="col-md-4 d-flex">
            <div>
                <label class="me-5 pe-5" for="validationCustomer">Select User</label>
            </div>
            <div>
                <select class="form-control  btn-sm" id="Customarname" required>
                    <option selected disabled value="">- Select Customar -</option>
                    @foreach (var item in ViewBag.CustomarList)
                    {
                        <option value="@item.userId">@item.userName</option>
                    }
                </select>
            </div>
        </div>
    </div>
    @*##########   Select Target(User) part End    ##########*@


    @*##########   Target Product and Service part Start    ##########*@
    <div class="shadow p-3 mb-2 mt-2">
        <h6>Target Product and Service</h6>
        <hr/>
            <div class="row">

                @*Left grid start*@
                <div class="col">
                    <div class="d-flex">
                        <div>
                            <label class="me-5 pe-5" for="validationProduct">Select Product/Serivce</label>
                        </div>
                        <div>
                            <select class="form-control btn-sm" id="productName" required>
                                <option selected disabled value="">-Select Product-</option>
                                @foreach (var item in ViewBag.ProductList)
                                {
                                    <option value="@item.productId">@item.productName</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="d-flex my-2">
                        <div>
                            <label class="me-5 pe-5" for="validationUnit">Unit</label>
                        </div>
                        <div>
                            <input type="text" class="form-control btn-sm" id="unit" readonly>
                        </div>
                    </div>

                    <div class="d-flex my-2">
                        <div>
                            <label class="me-5 pe-5" for="validationTargetVolume">Target Volume</label>
                        </div>
                        <div>
                            <input type="text" class="form-control btn-sm" id="targetVolume" placeholder="Volume">
                        </div>
                    </div>

                     <div class="d-flex my-2">
                        <div>
                            <label class="me-5 pe-5" for="validationTargetAmount">Target Amount</label>
                        </div>
                        <div>
                            <input type="text" class="form-control btn-sm" id="targetAmount" placeholder="Amount">
                        </div>
                    </div>
                </div>
                @*Left grid start*@


                @*Right grid start*@
                <div class="col">
                    <div class="d-flex">
                        <div>
                            <label class="me-5 pe-5" for="validationProduct">Select Product/Serivce</label>
                        </div>
                        <div>
                            <select class="form-control btn-sm" id="productlist" required>
                                <option selected disabled value="">-Select Product-</option>
                                @foreach (var item in ViewBag.ProductList)
                                {
                                    <option value="@item.productId">@item.productName</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="d-flex my-2">
                        <div>
                            <label class="me-5 pe-5" for="validationStageName">Stage Name</label>
                        </div>
                        <div>
                            <input type="text" class="form-control btn-sm" id="stageName" readonly>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div>
                            <label class="me-5 pe-5" for="validationStageWeightage">Stage Weightage</label>
                        </div>
                        <div>
                            <input type="text" class="form-control btn-sm" id="stageWeightage" readonly>
                        </div>
                    </div>
                </div>
                @*Right grid end*@
            </div>
            <button class="btn btn-secondary rounded-1 text-end btn-sm" type="submit"> <i class="bi bi-plus-square"></i> Add</button>
    </div>
    @*##########   Target Product and Service part End    ##########*@


    <div class="card border">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="detailsTable" class="table table-danger table-bordered table-hover">
                        <thead class="table-light">
                            <tr class="text-center small">
                                <th>Sl#</th>
                                <th style="width:20%">Select Product/Target</th>
                                <th>Unit</th>
                                <th style="width:13%">Target Volume</th>
                                <th style="width:13%">Target Amount</th>
                                <th style="width:13%">Sales Stage</th>
                                <th style="width:13%">Stage Name</th>
                                <th style="width:13%">Stage Weightage</th>
                                <th style="width:10%">Update</th>
                                <th style="width:10%">Delete</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
  </div>
   
  <br/>

  <div class="d-flex">
      <div class="me-2">
          <button class="btn btn-secondary rounded-1 text-end btn-sm" type="submit"> <i class="bi bi-card-list"></i> Save</button>
      </div>
      <div>
          <button type="submit" value="Refresh" name="Test" class="btn btn-secondary rounded-1 text-end btn-sm"> <i class="bi bi-arrow-repeat"></i> Refresh </button>
      </div>
  </div>
</form>

<script src="jquery-3.6.3.min.js"></script>

@section Scripts{

        <script>
              $("#productName").on('change', function () {
              var id = $(this).val();
                $.ajax({
                    type: 'GET',
                    url: '/targetProduct/GenerateUnit?id=' + id,
                    success: function (data) {
                        console.log(data);
                        $('#unit').val(data);
                    }
                });
              });

        </script>

            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
